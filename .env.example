# ========================
# 資料庫設定
# ========================

# MongoDB 連線設定
MONGO_INITDB_ROOT_USERNAME=your_mongodb_root_username
MONGO_INITDB_ROOT_PASSWORD=your_mongodb_root_password
MONGO_INITDB_DATABASE=your_mongodb_database
MONGO_USERNAME=your_mongodb_username
MONGO_PASSWORD=your_mongodb_password
MONGODB_URI=mongodb://${MONGO_USERNAME}:${MONGO_PASSWORD}@mongodb:27017/${MONGO_INITDB_DATABASE}?authSource=admin

# ========================
# 應用程式設定
# ========================

NODE_ENV=development
PORT=5001
VITE_API_URL=http://localhost:5001

# ========================
# 安全性設定
# ========================
# 請在生產環境中更改這些值
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=30d

# ========================
# 其他設定
# ========================
# 是否啟用 API 日誌記錄
ENABLE_API_LOGGING=true

# 開發者模式
DEBUG=app:*,server:*,api:*